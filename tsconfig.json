{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@1-api-draft/api": ["./src/package/api/src/index.ts"]
        },
        "sourceMap": true,
        "target": "ES2023",
        "lib": ["ESNext"],
        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/package/*/dist"]
}
