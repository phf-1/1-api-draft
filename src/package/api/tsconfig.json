{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "isolatedModules": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "ES2023",
        "lib": ["ESNext"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
